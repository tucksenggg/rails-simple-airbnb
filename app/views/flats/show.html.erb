<nav class="navbar">
  <div class="container-fluid bg-light">
    <div class="container d-flex justify-content-between">
      <%= link_to "Simple Airbnb", flats_path, class:"navbar-brand text-dark p-2" %>
    <div>
        <%= link_to "Add Flat", new_flat_path, class:"btn btn-outline-primary" %>
        <%= link_to "Sign Out", destroy_user_session_path, data: {turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class:"btn btn-outline-primary" %>
    </div>
    </div>
  </div>
</nav>

<div class="container">
  <img alt="Le Wagon" src="<%= @flat.url %>" class="show_image">
</div>

<div class="container d-flex justify-content-evenly wrapper">
    <div class="left w-50">

      <div class="border p-3 my-4 bg-light shadow-sm">
        <h3><%= @flat.name %></h3>
        <p><%= @flat.address %></p>
      </div>

      <div class="border p-3 my-4 bg-light shadow-sm">
        <h3>A bit more about this flat...</h3>
        <p><%= @flat.description %></p>
      </div>

      <div class="border p-3 my-4 bg-light shadow-sm">
        <h3>Details</h3>
        <div class='d-flex'>
          <p class="pe-3"><i class="fa-solid fa-person pe-2"></i><%= @flat.number_of_guests %></p>
          <p><i class="fa-solid fa-dollar-sign pe-2"></i><%= @flat.price_per_night %></p>
        </div>
      </div>
         <%= link_to "Edit Flat", edit_flat_path(@flat), class:"btn btn-success px-2 me-2 mb-4" %>
         <%= link_to "Delete", flat_path(@flat), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class:"ps-2 mb-4 btn btn-danger" %>
    </div>

    <div class="right">
      <div class="border p-3 my-4 bg-light shadow-sm">
        <h4>Book this place!</h4>

        <div class="input-group mb-3">
          <span class="input-group-text" id="from">From:</span>
          <input type="date" class="form-control" aria-label="from" aria-describedby="from">
        </div>

        <div class="input-group mb-3">
          <span class="input-group-text" id="to">To:</span>
          <input type="date" class="form-control" aria-label="to" aria-describedby="to">
        </div>

        <button type="button" class="btn btn-success w-100">Book</button>

      </div>
      <div class="border pt-3 my-4 bg-light shadow-sm">
        <div class="d-flex justify-content-around">
          <h6>Share</h6>
          <p>
            <i class="fa-brands fa-square-facebook fa-lg"></i>
            <i class="fa-brands fa-square-twitter fa-lg"></i>
            <i class="fa-brands fa-square-instagram fa-lg"></i>
            <i class="fa-brands fa-square-twitter fa-lg"></i>
          </p>
        </div>

      </div>
    </div>
</div>
